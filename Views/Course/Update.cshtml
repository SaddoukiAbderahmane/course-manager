﻿@model coursemanagement.Models.PopulateCourseViewModel
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add</h2>

@using (Html.BeginForm("Update", "Course", FormMethod.Post))
{
    @Html.AntiForgeryToken()


    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
            <div class="form-group">
                @Html.LabelFor(c => c.Id, new { @class = "form-label" })
                @Html.TextBoxFor(c => c.Id, new { @class = "form-control form-control-lg" })
                @Html.ValidationMessageFor(c => c.Id, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(c => c.Name, new { @class = "form-label" })
                @Html.TextBoxFor(c => c.Name, new { @class = "form-control form-control-lg" })
                @Html.ValidationMessageFor(c => c.Name, null, new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(c => c.professeur, new { @class = "form-label" })
                @Html.TextBoxFor(c => c.professeur, new { @class = "form-control form-control-lg" })
                @Html.ValidationMessageFor(c => c.professeur, null, new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(c => c.filiere, new { @class = "form-label" })
            @Html.TextBoxFor(c => c.filiere, new { @class = "form-control form-control-lg" })
            @Html.ValidationMessageFor(c => c.filiere, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10 mt-3 mb-5">
            <input type="submit" id="form-button" class="btn btn-success" value="Update Course" />
        </div>
    </div>
}